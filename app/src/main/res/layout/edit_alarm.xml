<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmListFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <ImageView
        android:id="@+id/titleIcon"
        style="@style/EditAlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/alarm_title_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_event_note_black_24dp" />

    <EditText
        android:id="@+id/titleValue"
        style="@style/EditAlarmValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/alarm_title_hint"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spacer1"
        style="@style/HorizontalSpacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleIcon" />

    <ImageView
        android:id="@+id/dateIcon"
        style="@style/EditAlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/alarm_date_label"
        android:src="@drawable/ic_date_range_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spacer1" />

    <EditText
        android:id="@+id/dateValue"
        style="@style/EditAlarmValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/alarm_date_hint"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="@string/alarm_date_hint"
        android:inputType="none|date"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@+id/dateIcon"
        app:layout_constraintTop_toBottomOf="@+id/spacer1" />

    <ImageView
        android:id="@+id/timeIcon"
        style="@style/EditAlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/alarm_time_hint"
        android:src="@drawable/ic_access_time_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/spacer1" />

    <EditText
        android:id="@+id/timeValue"
        style="@style/EditAlarmValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/alarm_time_hint"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="@string/alarm_time_hint"
        android:inputType="none|time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeIcon"
        app:layout_constraintTop_toBottomOf="@+id/spacer1" />

    <Space
        android:id="@+id/spacer2"
        style="@style/HorizontalSpacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateIcon" />

    <ImageView
        android:id="@+id/occasionIcon"
        style="@style/EditAlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/alarm_occasion_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spacer2"
        app:srcCompat="@drawable/ic_cake_black_24dp" />

    <Spinner
        android:id="@+id/occasionSpinner"
        style="@style/EditAlarmValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/occasionIcon"
        app:layout_constraintTop_toBottomOf="@+id/spacer2" />

</androidx.constraintlayout.widget.ConstraintLayout>